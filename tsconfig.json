{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@views": ["app/views"],
      "@views/*": ["app/views/*"],
      "@hooks": ["app/hooks"],
      "@core-components": ["core/components"],
      "@core-constants": ["core/constants"],
      "@core-hooks": ["core/hooks"],
      "@core-styles": ["core/styles"],
      "@core-utils": ["core/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
