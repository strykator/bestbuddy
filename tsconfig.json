{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["app/views/@common/*"],
      "@common": ["app/views/@common"],
      "@components/*": ["core/components/*"],
      "@components": ["core/components"],
      "@constants/*": ["core/constants/*"],
      "@constants": ["core/constants"],
      "@styles/*": ["core/styles/*"],
      "@styles": ["core/styles"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
